  if(!isset($uid)) {
    $query = db_query("SELECT uid,vung_mien FROM {doji_group_vung}");
  }
  else {
    $query = db_query("SELECT uid,vung_mien FROM {doji_group_vung} WHERE uid = %d",$uid);
  }
  while($row = db_fetch_array($query)) {
    $rows[$row['uid']] = $row['vung_mien'];
  }
  return $rows;
}
