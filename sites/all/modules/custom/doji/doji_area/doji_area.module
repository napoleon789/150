function doji_area_canhbao_ajax() {
  global $user;
  $rows = array();

  if ($user->uid == 1) {
    $status = ' WHERE status = 0';
  }
  else {
    $status =' WHERE uid = '.$user ->uid;
  }

  $num = db_result(db_query('SELECT COUNT(id) FROM {canhbao}' . $status));

  if($num == 0) {
    $arr = array('noidung' => 'Không có cập nhật vi phạm');
    if(arg(0) == 'canhbao') {
      drupal_json($arr);
      die;
    }
  }
  else {
    $query = db_query_range('SELECT * FROM {canhbao} ' . $status . ' ORDER BY ID DESC', 0, 6);

    while($row = db_fetch_array($query)) {
      $content['id'] = $row['nid'];
      $content['uid'] = $row['uid'];
      $nd_exp = explode(",",$row['nd']);
      array_pop($nd_exp);
      $content['noidung'] = $nd_exp;
      $nd_popup =  $row['ndpoup'];
      $m = explode(';',$nd_popup);
      array_pop($m);
      $tt = '';

      foreach($m as $n) {
        $tt[] = explode(',',$n);
      }

      $vn ='';

      foreach($tt as $b => $kk) {
        $dn['title'] = $content['noidung'][$b];
        $dn['error'] = $kk;
        $vn[] = $dn;
      }

      $content['ndpoup'] = $vn;
      $content['time'] = date('H:i d/m/Y', $row['time']);

      switch($row['status']) {
        case 0 :
          $trangthai = 'Chờ duyệt';
          break;
        case 1:
          $trangthai = 'Đã duyệt';
          break;
        case 2:
          $trangthai = 'Từ chối';
          break;
      }

      $content['status'] = $trangthai;
      $content['class'] = $row['status'];
      $rows[] = $content;
    }

    if(arg(0) == 'canhbao') {
      $m = json_encode($rows);
      echo $m;
      exit;
    }

    return $rows;
  }
}

