function doji_area_price_data($field,$type = 'biendo_ban') {
  $query = db_query_range("SELECT * FROM {biendo} WHERE field_value = '".$field."'");
  $num = db_result($query);
  if($num == 1){
    $query = db_query("SELECT * FROM {biendo} WHERE field_value = '".$field."'");
    while($row = db_fetch_array($query)) {
      return $row[$type];
    }
  }
  else
    return 0;
}

function doji_area_history_update() {
  $result = array();
  $output = '';
  $output .= '<ul>';
  $query = db_query_range("SELECT nid,changed,sticky,uid FROM {node} WHERE type = 'goldprice' ORDER BY nid DESC",0,8);
  while($row = db_fetch_array($query)) {
    if($row['uid'] == 1) {
      if(isset($row['sticky']) && $row['sticky'] == 1) {
        $output .= '<li class="table"><span class="table-left">HN đồng ý cập nhật HCM </span>';
        $output .= '<span class="table-right">'. date('h:i d/m/Y',$row['changed']).'</span></li>';
      }
      if(isset($row['sticky']) && $row['sticky'] == 2) {
        $output .= '<li class="table"><span class="table-left">HN đồng ý cập nhật giá ĐN </span>';
        $output .= '<span class="table-right">'. date('d:s d/m/Y',$row['changed']).'</span></li>';
      }
      else {
        $output .= '<li class="table"><span class="table-left">HN cập nhật giá </span>';
        $output .= '<span class="table-right">'. date('h:i',$row['changed']).' '. date('d/m/Y',$row['changed']).'</span></li>';
      }
    }
    if($row['uid'] == 108) {
      $output .= '<li class="table"><span class="table-left">ĐN cập nhật giá </span>';
      $output .= '<span class="table-right">'. date('h:i d/m/Y',$row['changed']).'</span></li>';
    }
    if($row['uid'] == 109) {
      $output .= '<li class="table"><span class="table-left">HCM Cập nhật giá </span>';
      $output .= '<span class="table-right">'. date('h:i d/m/Y',$row['changed']).'</span></li>';
    }

  }
  $output .= '</ul>';
  return $output;
}

